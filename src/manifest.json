{
  "manifest_version": 3,
  "name": "魏如雪",
  "description": "电子书采集工具，目前仅支持微信读书",
  "version": "0.0.4.4",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://*.weread.qq.com/*",
    "https://*.file.myqcloud.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_weread",
        "enabled": true,
        "path": "rules/weread.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.weread.qq.com/web/reader/*"
      ],
      "js": [
        "common/inject.js",
        "common/utils.js",
        "weread/crypto-js@4.2.0.min.js",
        "weread/utils.js",
        "weread/store.js",
        "weread/content.js",
        "weread/auto.js"
      ],
      "css": [
        "weread/toc.css"
      ],
      "run_at": "document_start",
      "world": "ISOLATED",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "common/xhr-fetch.js"
      ]
    },
    {
      "matches": [
        "https://*.weread.qq.com/*"
      ],
      "resources": [
        "/overrides/weread/7.04bb0a1c.js",
        "/overrides/weread/7.0a38f2f5.js",
        "/overrides/weread/7.1a24df31.js",
        "/overrides/weread/7.20b30d46.js",
        "/overrides/weread/7.24acd39e.js",
        "/overrides/weread/7.2a0ae8be.js",
        "/overrides/weread/7.2fb98ce9.js",
        "/overrides/weread/7.3394fd13.js",
        "/overrides/weread/7.3b8878b8.js",
        "/overrides/weread/7.3da2de76.js",
        "/overrides/weread/7.70713d4a.js",
        "/overrides/weread/7.76a189e5.js",
        "/overrides/weread/7.79c38430.js",
        "/overrides/weread/7.8c1ddae9.js",
        "/overrides/weread/7.9202be9e.js",
        "/overrides/weread/7.9409adc3.js",
        "/overrides/weread/7.947c2729.js",
        "/overrides/weread/7.9a9d9490.js",
        "/overrides/weread/7.9b51c786.js",
        "/overrides/weread/7.a06eabbb.js",
        "/overrides/weread/7.a320306a.js",
        "/overrides/weread/7.ab56cea8.js",
        "/overrides/weread/7.bd5fbf27.js",
        "/overrides/weread/7.c7402365.js",
        "/overrides/weread/7.c9283531.js",
        "/overrides/weread/7.c9fda82f.js",
        "/overrides/weread/7.ce60691e.js",
        "/overrides/weread/7.d69be44e.js",
        "/overrides/weread/7.da762a26.js",
        "/overrides/weread/7.dc67f89b.js",
        "/overrides/weread/7.dc814d1d.js",
        "/overrides/weread/7.f554b531.js",
        "/overrides/weread/7.f69c4bdc.js",
        "/overrides/weread/7.f6ac3b8d.js",
        "/overrides/weread/7.fab7d9dc.js"
